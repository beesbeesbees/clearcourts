<%= render "shared/header" %>
<div id="banner">
  <div class="overlay"></div> <!-- .overlay -->
  <div class="container text-center">
    <h1 class="white"><span class="green">Find</span> and <span class="green">Resolve</span> Your Citations</h1>
    <h4 class="white">I can help you look up your court citations, violations, and pay your tickets.</h4>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <%= link_to "Begin", new_session_path, id: "get-started", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    </div>
  </div>
</div> <!-- #banner -->
<div id="icons" class="container">
  <h3 class="text-center">Get Informed About Your [Buzzword]</h3>
  <div class="row">
    <div class="col-sm-4 single-icon">
      <%= icon('search', '', id: 'lookup', class: 'fa-5x green underline') %>
      <h3>Look Up Your Citation</h3>
    </div>
    <div class="col-sm-4 single-icon">
      <%= icon('calendar', '', id: 'get-court-date', class: 'fa-5x green underline') %>
      <h3>Get Court Date</h3>
    </div>
    <div class="col-sm-4 single-icon">
      <%= icon('usd', '', id: 'pay-online', class: 'fa-5x green underline') %>
      <h3>Pay Online</h3>
    </div>
  </div>

</div> <!-- .icons -->