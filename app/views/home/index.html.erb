<%= render "shared/header" %>
<div id="content">
  <div id="banner">
    <div class="overlay"></div> <!-- .overlay -->
    <div class="container text-center">
      <h1 class="gray"><span class="green">Find</span> and <span class="green">Resolve</span> Your Citations</h1>
      <h4 class="gray">I can help you look up your court citations, violations, and pay your tickets.</h4>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
          <%= link_to "Begin", new_session_path, id: "get-started", class: "btn btn-primary btn-block btn-md" %>
          <% if ENV['CLEARCOURTS_PHONE_NUMBER'.freeze].to_s.length> 0 %>
            <span class="help-block">You can also Text START to <%= ENV['CLEARCOURTS_PHONE_NUMBER'.freeze] %> any time</span>
          <% end %>
        </div>
      </div>
    </div>
  </div> <!-- #banner -->

  <%= render "shared/icons" %>
</div> <!-- #content -->