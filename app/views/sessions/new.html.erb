<%= render "shared/header" %>
<div class="container">
  <h3 class="gray">Hi, I'm your ClearCourts helper, a textable all-in-one local courts expert.</h3> 
  <h2 class="gray">To get started, what's your <span class="green">Name</span>.</h2>
  <section class="form-section">
    <%= form_for @session, :html => {:class => 'form'} do |f| %>
      <% if @session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>
          <ul>
          <% @session.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Next", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </section>
</div>
