<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="light well">
    <h3>Invite a User</h3>
    <h2><%= t "devise.invitations.new.header" %></h2>
    <%= form_for resource, :as => resource_name, :url => user_invitation_path, :html => {:method => :post} do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <% resource.class.invite_key_fields.each do |field| -%>
            <%= f.text_field field, placeholder: field, class: "form-control" %>
      <% end -%>
      </div>

      <div class="form-group">
        <%= label_tag "user[role]", "What kind of user is this?" %>
        <%= select_tag "user[role]", options_for_select(["admin", "court"]) %>
      </div>

      <div class="form-group">
        <%= label_tag "user[court_id]", "Court:" %>
        <%= select_tag "user[court_id]", options_from_collection_for_select(Court.all, "id", "court_address") %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
</div>
</div>

